<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_attributes">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_links_form.pagebuilder_links_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Links</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_links_form.pagebuilder_links_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_links_form</namespace>
    </settings>
    <dataSource name="pagebuilder_links_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_links_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceDefaultOnly"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>

    <!-- First Link -->
    <fieldset name="first" sortOrder="10">

        <settings>
            <label translate="true">First Link</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>

        <!-- URL -->
        <urlInput name="first_link_url" sortOrder="10">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">URL</label>
                <dataScope>first_link_url</dataScope>
                <urlTypes class="Magento\Ui\Model\UrlInput\LinksConfigProvider"/>
            </settings>
        </urlInput>
        <!-- /URL -->

        <!-- Title -->
        <field name="first_link_title" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>first_link_title</dataScope>
                <dataType>text</dataType>
                <label translate="true">Title</label>
            </settings>
        </field>
        <!-- /Title -->

        <!-- State -->
        <field name="first_link_state" sortOrder="30" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Is Active</label>
                <dataScope>first_link_state</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <!-- /State -->

    </fieldset>
    <!-- /First Link -->

    <!-- Second Link -->
    <fieldset name="second" sortOrder="20">

        <settings>
            <label translate="true">Second Link</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>

        <!-- URL -->
        <urlInput name="second_link_url" sortOrder="10">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">URL</label>
                <dataScope>second_link_url</dataScope>
                <urlTypes class="Magento\Ui\Model\UrlInput\LinksConfigProvider"/>
            </settings>
        </urlInput>
        <!-- /URL -->

        <!-- Title -->
        <field name="second_link_title" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>second_link_title</dataScope>
                <dataType>text</dataType>
                <label translate="true">Title</label>
            </settings>
        </field>
        <!-- /Title -->

        <!-- State -->
        <field name="second_link_state" sortOrder="30" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Is Active</label>
                <dataScope>second_link_state</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <!-- /State -->

    </fieldset>
    <!-- /Second Link -->

    <!-- Third Link -->
    <fieldset name="third" sortOrder="30">

        <settings>
            <label translate="true">Third Link</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>

        <!-- URL -->
        <urlInput name="third_link_url" sortOrder="10">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">URL</label>
                <dataScope>third_link_url</dataScope>
                <urlTypes class="Magento\Ui\Model\UrlInput\LinksConfigProvider"/>
            </settings>
        </urlInput>
        <!-- /URL -->

        <!-- Title -->
        <field name="third_link_title" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>third_link_title</dataScope>
                <dataType>text</dataType>
                <label translate="true">Title</label>
            </settings>
        </field>
        <!-- /Title -->

        <!-- State -->
        <field name="third_link_state" sortOrder="30" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Is Active</label>
                <dataScope>third_link_state</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <!-- /State -->

    </fieldset>
    <!-- /Third Link -->


    <!-- Reset -->
    <fieldset name="background">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
    <fieldset name="advanced">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
    <!-- /Reset -->

</form>
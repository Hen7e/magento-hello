<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      extends="pagebuilder_base_form_with_background_attributes">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                pagebuilder_plp_enhanced_banner_form.pagebuilder_plp_enhanced_banner_form_data_source
            </item>
        </item>
        <item name="label" xsi:type="string" translate="true">PLP Enhanced Banner</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_plp_enhanced_banner_form.pagebuilder_plp_enhanced_banner_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_plp_enhanced_banner_form</namespace>
    </settings>
    <dataSource name="pagebuilder_plp_enhanced_banner_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_plp_enhanced_banner_form_data_source"
                      class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10"
              component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10"
               component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceDefaultOnly"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="general" sortOrder="15">
        <settings>
            <label translate="true">
                General
            </label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="plp_banner_title" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>plp_banner_title</dataScope>
                <dataType>text</dataType>
                <label translate="true">Banner title</label>
            </settings>
        </field>
        <field name="title_color" sortOrder="15" formElement="colorPicker">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">#000000</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Title color</label>
                <componentType>colorPicker</componentType>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <dataScope>title_color</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <field name="plp_banner_subtitle" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>plp_banner_subtitle</dataScope>
                <dataType>text</dataType>
                <label translate="true">Banner subtitle</label>
            </settings>
        </field>
        <field name="subtitle_color" sortOrder="25" formElement="colorPicker">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">#000000</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Subtitle color</label>
                <componentType>colorPicker</componentType>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <dataScope>subtitle_color</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="images" sortOrder="20">
        <settings>
            <label translate="true">Images</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <fieldset name="left_image" sortOrder="1">
            <settings>
                <label translate="true">Left Image</label>
                <collapsible>true</collapsible>
                <opened>true</opened>
            </settings>
            <field name="description_image_left" sortOrder="50" formElement="imageUploader">
                <settings>
                    <label translate="true">Left Image</label>
                    <notice>Desktop variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="description_mobile_image_left" sortOrder="60" formElement="imageUploader">
                <settings>
                    <label translate="true">Left Mobile Image</label>
                    <notice>Mobile variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="alt_left_image" sortOrder="65" formElement="input">
                <settings>
                    <label translate="true">Alternative Text for image</label>
                    <validation>
                        <rule name="validate-string" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
        </fieldset>
        <fieldset name="center_image">
            <settings>
                <label translate="true">Center Image</label>
                <collapsible>true</collapsible>
                <opened>false</opened>
            </settings>
            <field name="description_image_center" sortOrder="50" formElement="imageUploader">
                <settings>
                    <label translate="true">Center Image</label>
                    <notice>Desktop variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="description_mobile_image_center" sortOrder="60" formElement="imageUploader">
                <settings>
                    <label translate="true">Center Mobile Image</label>
                    <notice>Mobile variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="alt_center_image" sortOrder="65" formElement="input">
                <settings>
                    <label translate="true">Alternative Text for image</label>
                    <validation>
                        <rule name="validate-string" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
        </fieldset>
        <fieldset name="center_image_overlay">
            <settings>
                <label translate="true">Center Image Overlay</label>
                <collapsible>true</collapsible>
                <opened>false</opened>
            </settings>
            <field name="description_image_center_overlay" sortOrder="50" formElement="imageUploader">
                <settings>
                    <label translate="true">Center Image Overlay</label>
                    <notice>Desktop variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="description_mobile_image_center_overlay" sortOrder="60" formElement="imageUploader">
                <settings>
                    <label translate="true">Center Mobile Image Overlay</label>
                    <notice>Mobile variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="overlap_overlay_image" sortOrder="65" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">page</item>
                        <item name="default" xsi:type="string">not-overlapped</item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Overlap the image</label>
                    <notice translate="true">By enabling this option the overlay image will move to the bottom and
                        overlap another content
                    </notice>
                    <dataScope>overlap_overlay_image</dataScope>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="string">not-overlapped</map>
                                <map name="true" xsi:type="string">overlapped</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
            <field name="alt_center_image_overlay" sortOrder="70" formElement="input">
                <settings>
                    <label translate="true">Alternative Text for image</label>
                    <validation>
                        <rule name="validate-string" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
        </fieldset>
        <fieldset name="right_image">
            <settings>
                <label translate="true">Right Image</label>
                <collapsible>true</collapsible>
                <opened>false</opened>
            </settings>
            <field name="description_image_right" sortOrder="50" formElement="imageUploader">
                <settings>
                    <label translate="true">Right Image</label>
                    <notice>Desktop variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="description_mobile_image_right" sortOrder="60" formElement="imageUploader">
                <settings>
                    <label translate="true">Right Mobile Image</label>
                    <notice>Mobile variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="alt_right_image" sortOrder="65" formElement="input">
                <settings>
                    <label translate="true">Alternative Text for image</label>
                    <validation>
                        <rule name="validate-string" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
        </fieldset>
    </fieldset>
    <fieldset name="background" sortOrder="20">
        <field name="background_color" sortOrder="50" formElement="colorPicker">
            <settings>
                <label translate="true">Background Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>background_color</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <field name="background_attachment" sortOrder="60" formElement="hidden"/>
        <field name="background_repeat" sortOrder="60" formElement="hidden"/>
        <field name="background_size" sortOrder="60" formElement="hidden"/>
        <field name="background_image" sortOrder="60" formElement="hidden"/>
        <field name="mobile_image" sortOrder="60" formElement="hidden"/>
        <field name="background_position" sortOrder="60" formElement="hidden"/>
    </fieldset>
    <fieldset name="advanced" sortOrder="90">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
</form>

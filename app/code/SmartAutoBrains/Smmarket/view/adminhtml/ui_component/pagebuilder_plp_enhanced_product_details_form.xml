<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_attributes">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_plp_enhanced_product_details_form.pagebuilder_plp_enhanced_product_details_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">PLP enhanced product details</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_plp_enhanced_product_details_form.pagebuilder_plp_enhanced_product_details_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_plp_enhanced_product_details_form</namespace>
    </settings>
    <dataSource name="pagebuilder_plp_enhanced_product_details_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_plp_enhanced_product_details_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceEnhancedPlpProducts"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="product_details" sortOrder="15">
        <settings>
            <label translate="true">Product Details</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="reverse_product_content" sortOrder="5" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="default" xsi:type="string">no-reversed</item>
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">images_only_single_double_single</item>
                        <item name="disabled" xsi:type="string">images_only_double_double</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Reverse product and content</label>
                <dataScope>reverse_product_content</dataScope>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">no-reversed</map>
                            <map name="true" xsi:type="string">reversed</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="description_content" sortOrder="11" formElement="wysiwyg" template="ui/form/field">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="pagebuilder_button" xsi:type="boolean">false</item>
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                        <item name="toggle_button" xsi:type="boolean">false</item>
                        <item name="height" xsi:type="string">200px</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="false">Description</label>
                <dataScope>description_content</dataScope>
                <validation>
                    <rule name="validate-no-url" xsi:type="boolean">true</rule>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <imports>
                    <link name="validation.validate-no-url">${$.parentName}.link_url:value</link>
                </imports>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="product_description_image_desktop" sortOrder="15" formElement="imageUploader">
            <settings>
                <dataScope>product_description_image_desktop</dataScope>
                <label translate="true">Image</label>
                <notice>Desktop variant of description's image</notice>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <container name="plp_hero_banner_image_container" component="Magento_Ui/js/form/components/group"
                   sortOrder="16">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="breakLine" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string">Desktop image dimensions</item>
                </item>
            </argument>
            <field name="image_height_desktop" sortOrder="10" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="number">360</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                        <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                    </validation>
                    <dataType>text</dataType>
                    <dataScope>image_height_desktop</dataScope>
                    <notice>Height</notice>
                </settings>
            </field>
            <field name="image_width_desktop" sortOrder="15" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="number">640</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                        <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                    </validation>
                    <dataType>text</dataType>
                    <dataScope>image_width_desktop</dataScope>
                    <notice>Width</notice>
                </settings>
            </field>
        </container>
        <field name="product_description_image_mobile" sortOrder="20" formElement="imageUploader">
            <settings>
                <dataScope>product_description_image_mobile</dataScope>
                <label translate="true">Image</label>
                <notice>Mobile variant of description's image</notice>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <container name="plp_hero_banner_image_mobile_container" component="Magento_Ui/js/form/components/group"
                   sortOrder="25">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="breakLine" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string">Mobile image dimensions</item>
                </item>
            </argument>
            <field name="image_height_mobile" sortOrder="10" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="number">360</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                        <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                    </validation>
                    <dataType>text</dataType>
                    <dataScope>image_height_mobile</dataScope>
                    <notice>Height</notice>
                </settings>
            </field>
            <field name="image_width_mobile" sortOrder="15" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="number">640</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                        <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                    </validation>
                    <dataType>text</dataType>
                    <dataScope>image_width_mobile</dataScope>
                    <notice>Width</notice>
                </settings>
            </field>
        </container>
        <field name="alt" sortOrder="65" formElement="input">
            <settings>
                <label translate="true">Alternative Text for image</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <field name="border">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">solid</item>
                </item>
            </argument>
            <settings>
                <dataScope>border</dataScope>
            </settings>
        </field>
        <field name="border_color">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">#0074a2</item>
                </item>
            </argument>
            <settings>
                <dataScope>border_color</dataScope>
                <notice translate="true">This option is used to specify an arrow color</notice>
            </settings>
        </field>
        <field name="margins_and_padding">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">{"margin":{"bottom":"","left":"","right":"","top":""},"padding":{"bottom":"10","left":"10","right":"10","top":"10"}}</item>
                </item>
            </argument>
        </field>
        <field name="text_align" sortOrder="5" formElement="hidden"/>
        <field name="border_width" sortOrder="7" formElement="hidden"/>
        <field name="border_radius" sortOrder="9" formElement="hidden"/>
        <field name="css_classes" sortOrder="15" formElement="hidden"/>
    </fieldset>
    <fieldset name="background">
        <settings>
            <label translate="true">Background for description</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="background_color" sortOrder="10" formElement="colorPicker">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">#0074a2</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Background Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>background_color</dataScope>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <field name="background_image" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="mobile_image" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="background_attachment" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="background_repeat" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="background_size" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="background_position" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>

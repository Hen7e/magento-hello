<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                pagebuilder_plp_enhanced_product_detail_item_image_form.pagebuilder_plp_enhanced_product_detail_item_image_form_data_source
            </item>
        </item>
        <item name="label" xsi:type="string" translate="true">PLP enhanced product details</item>
    </argument>
    <settings>
        <deps>
            <dep>
                pagebuilder_plp_enhanced_product_detail_item_image_form.pagebuilder_plp_enhanced_product_detail_item_image_form_data_source
            </dep>
        </deps>
        <namespace>pagebuilder_plp_enhanced_product_detail_item_image_form</namespace>
    </settings>
    <dataSource name="pagebuilder_plp_enhanced_product_detail_item_image_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_plp_enhanced_product_detail_item_image_form_data_source"
                      class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10"
              component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10"
               component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceDefaultOnly"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="content_image_fieldset" sortOrder="10">
        <settings>
            <label translate="true">Image content</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="description_content" sortOrder="11" formElement="wysiwyg" template="ui/form/field">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="pagebuilder_button" xsi:type="boolean">false</item>
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                        <item name="toggle_button" xsi:type="boolean">false</item>
                        <item name="height" xsi:type="string">200px</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="false">Description</label>
                <dataScope>description_content</dataScope>
                <validation>
                    <rule name="validate-no-url" xsi:type="boolean">true</rule>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <imports>
                    <link name="validation.validate-no-url">${$.parentName}.link_url:value</link>
                </imports>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="justify_content" sortOrder="25" formElement="select"
               component="Magento_PageBuilder/js/form/element/visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">flex-start</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Horizontal Alignment</label>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
                <dataScope>justify_content</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\PageBuilder\Model\Source\HorizontalAlignment"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="align_items" sortOrder="30" formElement="select"
               component="Magento_PageBuilder/js/form/element/visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string"/>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Vertical Alignment</label>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
                <dataScope>align_items</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\PageBuilder\Model\Source\VerticalAlignment"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="paddings_section" sortOrder="35" formElement="input"
               component="Astound_ContentTypes/js/form/element/paddings-form">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="padding" xsi:type="array">
                            <item name="top" xsi:type="number">0</item>
                            <item name="right" xsi:type="number">0</item>
                            <item name="bottom" xsi:type="number">0</item>
                            <item name="left" xsi:type="number">0</item>
                        </item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">Paddings</label>
                <placeholder translate="true">Default</placeholder>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="less-than-equals-to" xsi:type="number">999</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">-1</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="image_details_fieldset" sortOrder="15">
        <settings>
            <label translate="true">Image configuration</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="product_description_image_desktop" sortOrder="15" formElement="imageUploader">
            <settings>
                <dataScope>product_description_image_desktop</dataScope>
                <label translate="true">Image</label>
                <notice>Desktop variant of description's image</notice>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="product_description_image_mobile" sortOrder="20" formElement="imageUploader">
            <settings>
                <dataScope>product_description_image_mobile</dataScope>
                <label translate="true">Image</label>
                <notice>Mobile variant of description's image</notice>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="data_image_type" sortOrder="21" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="default" xsi:type="string">single-image</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Double Image</label>
                <dataScope>data_image_type</dataScope>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">single-image</map>
                            <map name="true" xsi:type="string">double-image</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="use_arrow" sortOrder="22" formElement="select" component="Magento_PageBuilder/js/form/element/visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string"/>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Image Arrow</label>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
                <notice translate="true">Specify arrow position or "no arrow" option if it is not needed</notice>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="ArrowImagePosition"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="arrow_color" sortOrder="24" formElement="colorPicker">
            <settings>
                <label translate="true">Arrow Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>arrow_color</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <field name="alt_image" sortOrder="40" formElement="input">
            <settings>
                <label translate="true">Alternative Text for image</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
</form>

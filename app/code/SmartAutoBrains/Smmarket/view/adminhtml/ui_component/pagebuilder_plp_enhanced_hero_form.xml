<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_attributes">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_plp_enhanced_hero_form.pagebuilder_plp_enhanced_hero_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">PLP Enhanced Hero</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_plp_enhanced_hero_form.pagebuilder_plp_enhanced_hero_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_plp_enhanced_hero_form</namespace>
    </settings>
    <dataSource name="pagebuilder_plp_enhanced_hero_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_plp_enhanced_hero_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceDefaultOnly"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">
                General
            </label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="description_content" sortOrder="11" formElement="wysiwyg" template="ui/form/field">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="pagebuilder_button" xsi:type="boolean">false</item>
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                        <item name="toggle_button" xsi:type="boolean">false</item>
                        <item name="height" xsi:type="string">200px</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="false">Content</label>
                <dataScope>description_content</dataScope>
                <validation>
                    <rule name="validate-no-url" xsi:type="boolean">true</rule>
                </validation>
                <imports>
                    <link name="validation.validate-no-url">${$.parentName}.link_url:value</link>
                </imports>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="justify_content" sortOrder="20" formElement="select" component="Magento_PageBuilder/js/form/element/visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">flex-start</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Horizontal Alignment</label>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
                <dataScope>justify_content</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\PageBuilder\Model\Source\HorizontalAlignment"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="background_color_image" sortOrder="12">
        <settings>
            <label translate="true">
                Background
            </label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="background_color_image" sortOrder="50" formElement="colorPicker">
            <settings>
                <label translate="true">Background Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>background_color_image</dataScope>
                <dataType>text</dataType>
                <notice translate="true">Background for left or right side of image in case if one of the sides does not need any image.</notice>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="images" sortOrder="15">
        <settings>
            <label translate="true">Images</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <fieldset name="left_image" sortOrder="5">
            <settings>
                <label translate="true">Left image</label>
                <collapsible>true</collapsible>
                <opened>true</opened>
            </settings>
            <field name="description_image_left" sortOrder="50" formElement="imageUploader">
                <settings>
                    <label translate="true">Left Image</label>
                    <notice>Desktop variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="description_mobile_image_left" sortOrder="51" formElement="imageUploader">
                <settings>
                    <label translate="true">Left Image</label>
                    <notice>Mobile variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="alt_left_image" sortOrder="65" formElement="input">
                <settings>
                    <label translate="true">Alternative Text for image</label>
                    <validation>
                        <rule name="validate-string" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
        </fieldset>
        <fieldset name="center_image">
            <settings>
                <label translate="true">Center Image</label>
                <collapsible>true</collapsible>
                <opened>false</opened>
            </settings>
            <field name="description_image_center" sortOrder="50" formElement="imageUploader">
                <settings>
                    <label translate="true">Center Image</label>
                    <notice>Desktop variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="description_mobile_image_center" sortOrder="51" formElement="imageUploader">
                <settings>
                    <label translate="true">Center Image</label>
                    <notice>Mobile variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="alt_center_image" sortOrder="65" formElement="input">
                <settings>
                    <label translate="true">Alternative Text for image</label>
                    <validation>
                        <rule name="validate-string" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
        </fieldset>
        <fieldset name="right_image">
            <settings>
                <label translate="true">Right Image</label>
                <collapsible>true</collapsible>
                <opened>false</opened>
            </settings>
            <field name="description_image_right" sortOrder="50" formElement="imageUploader">
                <settings>
                    <label translate="true">Right Image</label>
                    <notice>Desktop variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="description_mobile_image_right" sortOrder="51" formElement="imageUploader">
                <settings>
                    <label translate="true">Right Image</label>
                    <notice>Mobile variant of description's image</notice>
                    <componentType>imageUploader</componentType>
                </settings>
                <formElements>
                    <imageUploader>
                        <settings>
                            <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                            <maxFileSize>4194304</maxFileSize>
                            <uploaderConfig>
                                <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                            </uploaderConfig>
                            <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                        </settings>
                    </imageUploader>
                </formElements>
            </field>
            <field name="alt_right_image" sortOrder="65" formElement="input">
                <settings>
                    <label translate="true">Alternative Text for image</label>
                    <validation>
                        <rule name="validate-string" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
        </fieldset>
    </fieldset>
    <fieldset name="background" sortOrder="20">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
    <fieldset name="advanced" sortOrder="90">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
</form>

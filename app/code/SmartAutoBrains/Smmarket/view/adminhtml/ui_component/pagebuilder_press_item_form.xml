<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_attributes">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_press_item_form.pagebuilder_press_item_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Press Item</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_press_item_form.pagebuilder_press_item_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_press_item_form</namespace>
    </settings>
    <dataSource name="pagebuilder_press_item_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_press_item_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">image</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourcePressItem"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>

    <!-- Content -->
    <fieldset name="content" sortOrder="20">
        <settings>
            <label translate="true">Content</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>

        <!-- > Title -->
        <field name="title" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>title_html</dataScope>
                <dataType>text</dataType>
                <label translate="true">Title</label>
            </settings>
        </field>
        <!-- >/ Title -->

        <!-- > Description -->
        <field name="description" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">image</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataScope>description_html</dataScope>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
        </field>
        <!-- >/ Description -->

        <!-- > Source -->
        <field name="source" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">card</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataScope>source_html</dataScope>
                <dataType>text</dataType>
                <label translate="true">Source</label>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
        </field>
        <!-- >/ Source -->

        <!-- > Action -->
        <field name="action" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">MORE</item>
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>action_html</dataScope>
                <dataType>text</dataType>
                <label translate="true">Action</label>
            </settings>
        </field>
        <!-- >/ Action -->

        <!-- > Date -->
        <field name="date" formElement="date" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">some_source</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Date</label>
                <visible>true</visible>
                <dataScope>date_html</dataScope>
            </settings>
            <formElements>
                <date>
                    <settings>
                        <options>
                            <option name="dateFormat" xsi:type="string">MMM d, y</option>
                            <option name="showsTime" xsi:type="boolean">false</option>
                        </options>
                    </settings>
                </date>
            </formElements>
        </field>
        <!-- >/ Date -->

        <!-- > Text color -->
        <field name="text_color" sortOrder="60" formElement="colorPicker">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">card</item>
                    </item>
                    <item name="default" xsi:type="string">#ffffff</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Text Color</label>
                <componentType>colorPicker</componentType>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>text_color</dataScope>
                <dataType>text</dataType>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <!-- >/ Text color -->

        <!-- > Link -->
        <urlInput name="link_url" sortOrder="70">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Link</label>
                <dataScope>link_url</dataScope>
                <urlTypes class="Magento\Ui\Model\UrlInput\LinksConfigProvider"/>
            </settings>
        </urlInput>
        <!-- >/ Link -->

        <!-- > Image -->
        <field name="image"  sortOrder="80" formElement="imageUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">card</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">Image</label>
                <componentType>imageUploader</componentType>
                <dataScope>image_source</dataScope>
                <dataType>text</dataType>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <!-- >/ Image -->

        <!-- > Overlay color -->
        <field name="overlay_color" sortOrder="90" formElement="colorPicker">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">card</item>
                    </item>
                    <item name="default" xsi:type="string">rgba(0, 0, 0, 0.8)</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Overlay Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>overlay_color</dataScope>
                <dataType>text</dataType>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>rgb</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>

    </fieldset>
    <!-- /Content -->

    <!-- Reset -->
    <fieldset name="background">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
    <fieldset name="advanced">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
    <!-- /Reset -->

</form>
<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_attributes">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_articles_form.pagebuilder_articles_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">tiles</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_articles_form.pagebuilder_articles_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_articles_form</namespace>
    </settings>
    <dataSource name="pagebuilder_articles_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_articles_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceDefaultOnly"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="disclaimer" sortOrder="30">
        <settings>
            <label translate="true">Disclaimer</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="use_disclaimer" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">false</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <dataScope>use_disclaimer</dataScope>
                <label translate="true">Use Disclaimer</label>
                <notice translate="true">Hide excessive items under disclaimer</notice>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="visible_items_amount" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">4</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Visible Items</label>
                <notice translate="true">Number of items that will not be hidden under disclaimer</notice>
                <dataScope>visible_items_amount</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">1</rule>
                </validation>
                <imports>
                    <link name="disabled">!ns = ${ $.ns }, index = use_disclaimer:checked</link>
                </imports>
            </settings>
        </field>
        <field name="trigger_text_closed" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">See More</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Open Text</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <imports>
                    <link name="disabled">!ns = ${ $.ns }, index = use_disclaimer:checked</link>
                </imports>
                <dataScope>trigger_text_closed</dataScope>
            </settings>
        </field>
        <field name="trigger_text_opened" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">See Less</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Close Text</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <imports>
                    <link name="disabled">!ns = ${ $.ns }, index = use_disclaimer:checked</link>
                </imports>
                <dataScope>trigger_text_opened</dataScope>
            </settings>
        </field>
    </fieldset>
    <fieldset name="background">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
    <fieldset name="advanced">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
</form>

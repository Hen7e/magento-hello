<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      extends="pagebuilder_video_banner_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                pagebuilder_video_banner_extended_form.pagebuilder_video_banner_extended_form_data_source
            </item>
        </item>
        <item name="label" xsi:type="string" translate="true">Add Space Item</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_video_banner_extended_form.pagebuilder_video_banner_extended_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_video_banner_extended_form</namespace>
    </settings>
    <dataSource name="pagebuilder_video_banner_extended_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_video_banner_extended_form_data_source"
                      class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="20">
        <settings>
            <label translate="true">General</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="video_source" sortOrder="50" formElement="input">
            <settings>
                <validation>
                    <rule name="validate-video-url" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Video URL</label>
                <notice translate="true">YouTube and Vimeo supported</notice>
            </settings>
        </field>
        <field name="banner_title" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="banner_description" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="button_text" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="background">
        <field name="background_color">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">#f7f7f7</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <settings>
            <collapsible>true</collapsible>
        </settings>
        <field name="justify_content" sortOrder="20" formElement="select" component="Magento_PageBuilder/js/form/element/visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">flex-start</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Horizontal Alignment</label>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
                <dataScope>justify_content</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\PageBuilder\Model\Source\HorizontalAlignment"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="margins_and_padding">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">true</item>
                </item>
            </argument>
        </field>
        <field name="text_align" formElement="hidden"/>
        <field name="border" formElement="hidden"/>
        <field name="border_color" formElement="hidden"/>
        <field name="border_width" formElement="hidden"/>
        <field name="border_radius" formElement="hidden"/>
    </fieldset>
</form>

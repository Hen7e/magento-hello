<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"  extends="pagebuilder_base_form_with_background_attributes">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_hero_banner_form.pagebuilder_hero_banner_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Row</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_hero_banner_form.pagebuilder_hero_banner_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_hero_banner_form</namespace>
    </settings>
    <dataSource name="pagebuilder_hero_banner_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_hero_banner_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">contentDependant</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceHeroBanner" />
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="background" sortOrder="20">
        <field name="background_size" sortOrder="40" formElement="select" component="Magento_PageBuilder/js/form/element/visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">cover</item>
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">backgroundDependant</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Size</label>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="BackgroundSizeSource" />
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="background_position" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">backgroundDependant</item>
                    </item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
        </field>
        <field name="background_attachment" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">backgroundDependant</item>
                    </item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
        </field>
        <field name="background_repeat" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">backgroundDependant</item>
                    </item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
        </field>
    </fieldset>
    <fieldset name="overlay" sortOrder="21">
        <settings>
            <label translate="true">Overlay</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="use_overlay" sortOrder="1" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">false</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Use Overlay</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="overlay_color" sortOrder="80" formElement="colorPicker">
            <settings>
                <label translate="true">Overlay Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>overlay_color</dataScope>
                <dataType>text</dataType>
                <imports>
                    <link name="disabled">!ns = ${ $.ns }, index = use_overlay:checked</link>
                </imports>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="layout" sortOrder="40">
        <settings>
            <label translate="true">Layout</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="justify_content" sortOrder="20" formElement="select" component="Magento_PageBuilder/js/form/element/visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">flex-start</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Vertical Alignment</label>
                <notice translate="true">Vertical alignment controls how the child blocks of this container will be positioned. Set minimum height in order to use vertical alignment.</notice>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\PageBuilder\Model\Source\VerticalAlignment"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="min_height" sortOrder="60" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">backgroundDependant</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Minimum Height</label>
                <additionalClasses>
                    <class name="admin__field-small">true</class>
                </additionalClasses>
                <addAfter translate="true">px</addAfter>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = appearance:value</link>
                </imports>
            </settings>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <field name="text_align" formElement="hidden" />
        <field name="border" formElement="hidden" />
        <field name="border_color" formElement="hidden" />
        <field name="border_width" formElement="hidden" />
        <field name="border_radius" formElement="hidden" />
        <field name="margins_and_padding">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">{"margin":{"bottom":"0","left":"0","right":"0","top":"0"},"padding":{"bottom":"40","left":"40","right":"40","top":"40"}}</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="seo" sortOrder="80">
        <settings>
            <label translate="true">Search Engine Optimization</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="alt" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Alternative Text for image</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>

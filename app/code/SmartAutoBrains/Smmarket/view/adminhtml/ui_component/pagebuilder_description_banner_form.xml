<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_attributes">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_description_banner_form.pagebuilder_description_banner_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Description Banner</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_description_banner_form.pagebuilder_description_banner_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_description_banner_form</namespace>
    </settings>
    <dataSource name="pagebuilder_description_banner_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_description_banner_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceDefaultOnly"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="general" sortOrder="20">
        <settings>
            <label translate="true">
                General
            </label>
        </settings>
        <field name="banner_title" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>banner_title</dataScope>
                <dataType>text</dataType>
                <label translate="false">Title</label>
            </settings>
        </field>
        <field name="banner_details" sortOrder="20" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>banner_details</dataScope>
                <dataType>text</dataType>
                <label translate="false">Details text</label>
            </settings>
        </field>
        <field name="banner_link_text" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>banner_link_text</dataScope>
                <dataType>text</dataType>
                <label translate="false">Link text</label>
            </settings>
        </field>
        <field name="banner_link_anchor" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="default" xsi:type="string">#js-category-techology-details</item>
                </item>
            </argument>
            <settings>
                <dataScope>banner_link_anchor</dataScope>
                <dataType>text</dataType>
                <label translate="false">Link anchor</label>
            </settings>
        </field>
    </fieldset>
    <fieldset name="images" sortOrder="21">
        <settings>
            <label translate="true">Images</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="banner_image_height_desktop" sortOrder="48" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">360</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Banner desktop image height</label>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                </validation>
                <dataType>text</dataType>
                <dataScope>banner_image_height_desktop</dataScope>
            </settings>
        </field>
        <field name="banner_image_width_desktop" sortOrder="49" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">640</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Banner desktop image width</label>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                </validation>
                <dataType>text</dataType>
                <dataScope>banner_image_width_desktop</dataScope>
            </settings>
        </field>
        <field name="banner_image" sortOrder="50" formElement="imageUploader">
            <settings>
                <label translate="true">Image</label>
                <notice>Desktop variant of banner's image</notice>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="banner_image_height_mobile" sortOrder="51" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">640</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Banner mobile image height</label>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                </validation>
                <dataType>text</dataType>
                <dataScope>banner_image_height_mobile</dataScope>
            </settings>
        </field>
        <field name="banner_image_width_mobile" sortOrder="52" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">320</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Banner mobile image width</label>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                </validation>
                <dataType>text</dataType>
                <dataScope>banner_image_width_mobile</dataScope>
            </settings>
        </field>
        <field name="banner_mobile_image" sortOrder="53" formElement="imageUploader">
            <settings>
                <label translate="true">Image</label>
                <notice>Mobile variant of banner's image</notice>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="background" sortOrder="25">
        <field name="background_attachment" sortOrder="60" formElement="hidden"/>
        <field name="background_repeat" sortOrder="60" formElement="hidden"/>
        <field name="background_size" sortOrder="60" formElement="hidden"/>
        <field name="background_image" sortOrder="60" formElement="hidden"/>
        <field name="mobile_image" sortOrder="60" formElement="hidden"/>
        <field name="background_position" sortOrder="60" formElement="hidden"/>
    </fieldset>
    <fieldset name="seo" sortOrder="30">
        <settings>
            <label translate="true">Search Engine Optimization</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="alt" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Alternative Text for image</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="title_attribute" sortOrder="20" formElement="input">
            <settings>
                <label translate="true">Link Title Attribute</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="advanced" sortOrder="90">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
</form>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      extends="pagebuilder_base_form_with_background_attributes">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                pagebuilder_plp_enhanced_hero_banner_form.pagebuilder_plp_enhanced_hero_banner_form_data_source
            </item>
        </item>
        <item name="label" xsi:type="string" translate="true">Hero Banner</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_plp_enhanced_hero_banner_form.pagebuilder_plp_enhanced_hero_banner_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_plp_enhanced_hero_banner_form</namespace>
    </settings>
    <dataSource name="pagebuilder_plp_enhanced_hero_banner_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_plp_enhanced_hero_banner_form_data_source"
                      class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10"
              component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10"
               component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceDefaultOnly"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="content_fieldset" sortOrder="15">
        <settings>
            <label translate="true">
                Content
            </label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="plp_hero_banner_subtext" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>plp_hero_banner_subtext</dataScope>
                <dataType>text</dataType>
                <label translate="true">Subtext</label>
                <notice>Will be situated above the title</notice>
            </settings>
        </field>
        <field name="subtext_color" sortOrder="35" formElement="colorPicker">
            <settings>
                <label translate="true">Subtext Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>subtext_color</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <field name="plp_hero_banner_title" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>plp_hero_banner_title</dataScope>
                <dataType>text</dataType>
                <label translate="true">Title</label>
            </settings>
        </field>
        <field name="title_color" sortOrder="40" formElement="colorPicker">
            <settings>
                <label translate="true">Title Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>title_color</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <field name="plp_hero_banner_title_additional" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>plp_hero_banner_title_additional</dataScope>
                <dataType>text</dataType>
                <label translate="true">Subtitle</label>
                <notice>Will be situated under the title</notice>
            </settings>
        </field>
        <field name="title_additional_color" sortOrder="45" formElement="colorPicker">
            <settings>
                <label translate="true">Subtitle Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>title_additional_color</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <field name="description_content" sortOrder="50" formElement="wysiwyg" template="ui/form/field">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="pagebuilder_button" xsi:type="boolean">false</item>
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                        <item name="toggle_button" xsi:type="boolean">false</item>
                        <item name="height" xsi:type="string">200px</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="false">Content</label>
                <dataScope>description_content</dataScope>
                <validation>
                    <rule name="validate-no-url" xsi:type="boolean">true</rule>
                </validation>
                <imports>
                    <link name="validation.validate-no-url">${$.parentName}.link_url:value</link>
                </imports>
                <notice translate="true">Can be used instead of subtext, title, subtitle in order to get more flexibility to modify the content</notice>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="images_fieldset" sortOrder="20">
        <settings>
            <label translate="true">
                Images
            </label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="plp_hero_banner_image" sortOrder="10" formElement="imageUploader">
            <settings>
                <label translate="true">Desktop image</label>
                <notice>Desktop variant of description's image</notice>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <container name="plp_hero_banner_image_container" component="Magento_Ui/js/form/components/group"
                   sortOrder="15">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="breakLine" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string">Desktop image dimensions</item>
                </item>
            </argument>
            <field name="image_height_desktop" sortOrder="10" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="number">360</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                        <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                    </validation>
                    <dataType>text</dataType>
                    <dataScope>image_height_desktop</dataScope>
                    <notice>Height</notice>
                </settings>
            </field>
            <field name="image_width_desktop" sortOrder="15" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="number">640</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                        <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                    </validation>
                    <dataType>text</dataType>
                    <dataScope>image_width_desktop</dataScope>
                    <notice>Width</notice>
                </settings>
            </field>
        </container>
        <field name="plp_hero_banner_image_mobile" sortOrder="20" formElement="imageUploader">
            <settings>
                <label translate="true">Mobile image</label>
                <notice>Mobile variant of description's image</notice>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <container name="plp_hero_banner_image_mobile_container" component="Magento_Ui/js/form/components/group"
                   sortOrder="25">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="breakLine" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string">Mobile image dimensions</item>
                </item>
            </argument>
            <field name="image_height_mobile" sortOrder="10" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="number">360</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                        <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                    </validation>
                    <dataType>text</dataType>
                    <dataScope>image_height_mobile</dataScope>
                    <notice>Height</notice>
                </settings>
            </field>
            <field name="image_width_mobile" sortOrder="15" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="number">640</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                        <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                    </validation>
                    <dataType>text</dataType>
                    <dataScope>image_width_mobile</dataScope>
                    <notice>Width</notice>
                </settings>
            </field>
        </container>
    </fieldset>
    <fieldset name="optimization_fieldset" sortOrder="25">
        <settings>
            <label translate="true">
                Search Engine Optimization
            </label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="alt_hero_banner_image" sortOrder="5" formElement="input">
            <settings>
                <label translate="true">Title attribute for image</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="title_hero_banner_image_attribute" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Alternative text for image</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="background" sortOrder="30">
        <field name="background_color" sortOrder="10" formElement="colorPicker">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">#5a5a5a</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Background Color</label>
                <componentType>colorPicker</componentType>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>background_color</dataScope>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <field name="background_image" formElement="hidden"/>
        <field name="mobile_image" formElement="hidden"/>
        <field name="background_size" sortOrder="40" formElement="hidden"/>
        <field name="background_position" formElement="hidden"/>
        <field name="background_attachment" formElement="hidden"/>
        <field name="background_repeat" formElement="hidden"/>
    </fieldset>
    <fieldset name="advanced">
        <field name="margins_and_padding" sortOrder="70">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">{"margin":{"top":"","right":"","bottom":"","left":""},"padding":{"top":"","right":"","bottom":"","left":""}}</item>
                </item>
            </argument>
        </field>
        <field name="justify_content" sortOrder="20" formElement="select" component="Magento_PageBuilder/js/form/element/visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">flex-start</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Vertical Alignment</label>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
                <dataScope>justify_content</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\PageBuilder\Model\Source\VerticalAlignment"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="align_items" sortOrder="10" formElement="select" component="Magento_PageBuilder/js/form/element/visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string"/>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Horizontal Alignment</label>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
                <dataScope>align_items</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\PageBuilder\Model\Source\HorizontalAlignment"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="text_align" formElement="hidden"/>
        <field name="border" sortOrder="20" formElement="hidden"/>
        <field name="border_color" sortOrder="30" formElement="hidden"/>
        <field name="border_width" sortOrder="40" formElement="hidden"/>
        <field name="border_radius" sortOrder="50" formElement="hidden"/>
    </fieldset>
</form>

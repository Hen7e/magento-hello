<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="video_banner"
          label="Video Banner"
          component="Magento_PageBuilder/js/content-type"
          preview_component="Astound_ContentTypes/js/content-type/video_banner/preview"
          master_component="Magento_PageBuilder/js/content-type/master"
          form="pagebuilder_video_banner_form"
          menu_section="hydro"
          icon="icon-pagebuilder-video"
          sortOrder="70"
          translate="label">
        <parents default_policy="deny">
            <parent name="root-container" policy="allow"/>
        </parents>
        <children default_policy="deny"/>
        <appearances>
            <appearance name="default"
                        default="true"
                        preview_template="Astound_ContentTypes/content-type/video_banner/default/preview"
                        master_template="Astound_ContentTypes/content-type/video_banner/default/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <elements>
                    <element name="main">
                        <attribute name="name" source="data-content-type"/>
                        <attribute name="appearance" source="data-appearance"/>
                        <attribute name="background_images" source="data-background-images"/>
                        <style name="background_color" source="background_color"/>
                        <style name="background_image" source="background_image"
                               converter="Magento_PageBuilder/js/converter/style/background-image"
                               preview_converter="Magento_PageBuilder/js/converter/style/preview/background-image"
                               persistence_mode="write"/>
                        <style name="background_position" source="background_position"/>
                        <style name="background_size" source="background_size"/>
                        <style name="background_repeat" source="background_repeat"/>
                        <style name="background_attachment" source="background_attachment"/>
                        <css name="css_classes"/>
                    </element>
                    <element name="title">
                        <html name="banner_title" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="description">
                        <html name="banner_description" converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                    <element name="button">
                        <html name="button_text" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="video">
                        <attribute name="video_source" source="src"
                                   converter="Astound_ContentTypes/js/content-type/video/converter/attribute/src"
                                   preview_converter="Astound_ContentTypes/js/content-type/video/converter/attribute/src"/>
                    </element>
                </elements>
                <converters>
                    <converter name="background_images" component="Magento_PageBuilder/js/mass-converter/background-images">
                        <config>
                            <item name="attribute_name" value="background_images"/>
                            <item name="desktop_image_variable" value="background_image"/>
                            <item name="mobile_image_variable" value="mobile_image"/>
                        </config>
                    </converter>
                </converters>
            </appearance>
            <appearance name="video-only"
                        default="false"
                        preview_template="Astound_ContentTypes/content-type/video_banner/video-only/preview"
                        master_template="Astound_ContentTypes/content-type/video_banner/video-only/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <form>pagebuilder_video_banner_extended_form</form>

                <elements>
                    <element name="main">
                        <attribute name="name" source="data-content-type"/>
                        <attribute name="appearance" source="data-appearance"/>
                        <attribute name="background_images" source="data-background-images"/>
                        <style name="background_color" source="background_color"/>
                        <style name="background_image" source="background_image"
                               converter="Magento_PageBuilder/js/converter/style/background-image"
                               preview_converter="Magento_PageBuilder/js/converter/style/preview/background-image"
                               persistence_mode="write"/>
                        <style name="background_position" source="background_position"/>
                        <style name="background_size" source="background_size"/>
                        <style name="background_repeat" source="background_repeat"/>
                        <style name="background_attachment" source="background_attachment"/>
                        <style name="margins" storage_key="margins_and_padding" reader="Magento_PageBuilder/js/property/margins" converter="Magento_PageBuilder/js/converter/style/margins"/>
                        <style name="padding" storage_key="margins_and_padding" reader="Magento_PageBuilder/js/property/paddings" converter="Magento_PageBuilder/js/converter/style/paddings"/>
                        <css name="css_classes"/>
                    </element>
                    <element name="video">
                        <attribute name="video_source" source="src"
                                   converter="Astound_ContentTypes/js/content-type/video/converter/attribute/src"
                                   preview_converter="Astound_ContentTypes/js/content-type/video/converter/attribute/src"/>
                    </element>
                    <element name="video_container">
                        <style name="justify_content" source="justify_content"/>
                    </element>
                </elements>
                <converters>
                    <converter name="background_images" component="Magento_PageBuilder/js/mass-converter/background-images">
                        <config>
                            <item name="attribute_name" value="background_images"/>
                            <item name="desktop_image_variable" value="background_image"/>
                            <item name="mobile_image_variable" value="mobile_image"/>
                        </config>
                    </converter>
                </converters>
            </appearance>
        </appearances>
        <is_system>true</is_system>
    </type>
</config>

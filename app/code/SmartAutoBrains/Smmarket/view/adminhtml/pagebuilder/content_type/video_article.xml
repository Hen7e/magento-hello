<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="video_article"
          label="Video Article"
          menu_section="hydro"
          component="Magento_PageBuilder/js/content-type-collection"
          preview_component="Magento_PageBuilder/js/content-type/preview"
          master_component="Magento_PageBuilder/js/content-type/master"
          form="pagebuilder_video_article_form"
          icon="icon-pagebuilder-columns"
          sortOrder="60"
          translate="label">
        <children default_policy="deny"/>
        <parents default_policy="deny">
            <parent name="root-container" policy="allow" />
        </parents>
        <appearances>
            <appearance name="main-full"
                        default="true"
                        preview_template="Astound_ContentTypes/content-type/video-article/main-full/preview"
                        master_template="Astound_ContentTypes/content-type/video-article/main-full/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <elements>
                    <element name="main">
                        <style name="display" source="display" converter="Magento_PageBuilder/js/converter/style/display" preview_converter="Magento_PageBuilder/js/converter/style/preview/display"/>
                        <attribute name="name" source="data-content-type"/>
                        <attribute name="appearance" source="data-appearance"/>
                        <html name="html" preview_converter="Magento_PageBuilder/js/converter/attribute/preview/store-id"/>
                        <css name="css_classes"/>
                    </element>
                    <element name="video_element">
                        <html name="video_url"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                        <attribute name="virtual_video_src" storage_key="video_url" source="src" converter="Magento_PageBuilder/js/converter/attribute/link-href" persistence_mode="write"/>
                    </element>
                    <element name="video_article_image">
                        <attribute name="video_article_image"
                                   source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src" />
                        <attribute name="alt" source="alt" />
                        <attribute name="title_attribute" source="title" />
                    </element>
                    <element name="video_article_image_mobile">
                        <attribute name="video_article_image_mobile"
                                   source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src" />
                        <attribute name="alt" source="alt" />
                        <attribute name="title_attribute" source="title" />
                    </element>
                    <element name="yt_button">
                        <attribute name="name" source="data-element"/>
                        <attribute name="yt_button_url" reader="Magento_PageBuilder/js/property/link" persistence_mode="read"/>
                        <attribute name="virtual_link_href" storage_key="yt_button_url" source="href" converter="Magento_PageBuilder/js/converter/attribute/link-href" persistence_mode="write"/>
                        <attribute name="virtual_link_target" storage_key="yt_button_url" source="target" converter="Magento_PageBuilder/js/converter/attribute/link-target" persistence_mode="write"/>
                        <attribute name="virtual_link_type" storage_key="yt_button_url" source="data-link-type" converter="Magento_PageBuilder/js/converter/attribute/link-type" persistence_mode="write"/>
                    </element>
                    <element name="video_article_title">
                        <html name="video_article_title_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="video_article_title_second">
                        <html name="video_article_title_second_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="video_article_description">
                        <html name="video_article_description_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="video_article_content">
                        <html name="video_article_content" converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                    <element name="socials">
                        <attribute name="social_share" source="social_share" />
                    </element>
                    <element name="twitter_url">
                        <html name="twitter_url_text"
                              converter="Magento_PageBuilder/js/converter/html/decode"/>
                    </element>
                    <element name="twitter_message">
                        <html name="twitter_message_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="facebook_url">
                        <html name="facebook_url_text"
                              converter="Magento_PageBuilder/js/converter/html/decode"/>
                    </element>
                    <element name="linkedin_title">
                        <html name="linkedin_title_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="linkedin_summary">
                        <html name="linkedin_summary_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="linkedin_source">
                        <html name="linkedin_source_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="linkedin_url">
                        <html name="linkedin_url_text"
                              converter="Magento_PageBuilder/js/converter/html/decode"/>
                    </element>
                </elements>
            </appearance>
            <appearance name="main-columns"
                        preview_template="Astound_ContentTypes/content-type/video-article/main-columns/preview"
                        master_template="Astound_ContentTypes/content-type/video-article/main-columns/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <elements>
                    <element name="main">
                        <style name="display" source="display" converter="Magento_PageBuilder/js/converter/style/display" preview_converter="Magento_PageBuilder/js/converter/style/preview/display"/>
                        <attribute name="name" source="data-content-type"/>
                        <attribute name="appearance" source="data-appearance"/>
                        <html name="html" preview_converter="Magento_PageBuilder/js/converter/attribute/preview/store-id"/>
                        <css name="css_classes"/>
                    </element>
                    <element name="video_element">
                        <html name="video_url"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                        <attribute name="virtual_video_src" storage_key="video_url" source="src" converter="Magento_PageBuilder/js/converter/attribute/link-href" persistence_mode="write"/>
                    </element>
                    <element name="video_article_image">
                        <attribute name="video_article_image"
                                   source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src" />
                        <attribute name="alt" source="alt" />
                        <attribute name="title_attribute" source="title" />
                    </element>
                    <element name="video_article_image_mobile">
                        <attribute name="video_article_image_mobile"
                                   source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src" />
                        <attribute name="alt" source="alt" />
                        <attribute name="title_attribute" source="title" />
                    </element>
                    <element name="yt_button">
                        <attribute name="name" source="data-element"/>
                        <attribute name="yt_button_url" reader="Magento_PageBuilder/js/property/link" persistence_mode="read"/>
                        <attribute name="virtual_link_href" storage_key="yt_button_url" source="href" converter="Magento_PageBuilder/js/converter/attribute/link-href" persistence_mode="write"/>
                        <attribute name="virtual_link_target" storage_key="yt_button_url" source="target" converter="Magento_PageBuilder/js/converter/attribute/link-target" persistence_mode="write"/>
                        <attribute name="virtual_link_type" storage_key="yt_button_url" source="data-link-type" converter="Magento_PageBuilder/js/converter/attribute/link-type" persistence_mode="write"/>
                    </element>
                    <element name="video_article_description">
                        <html name="video_article_description_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="video_article_title">
                        <html name="video_article_title_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="video_article_content">
                        <html name="video_article_content" converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                    <element name="socials">
                        <attribute name="social_share" source="social_share"/>
                    </element>
                    <element name="twitter_url">
                        <html name="twitter_url_text"
                              converter="Magento_PageBuilder/js/converter/html/decode"/>
                    </element>
                    <element name="twitter_message">
                        <html name="twitter_message_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="facebook_url">
                        <html name="facebook_url_text"
                              converter="Magento_PageBuilder/js/converter/html/decode"/>
                    </element>
                    <element name="linkedin_title">
                        <html name="linkedin_title_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="linkedin_summary">
                        <html name="linkedin_summary_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="linkedin_source">
                        <html name="linkedin_source_text"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="linkedin_url">
                        <html name="linkedin_url_text"
                              converter="Magento_PageBuilder/js/converter/html/decode"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
        <additional_data>
            <item name="uploaderConfig" xsi:type="array">
                <item name="isShowImageUploadInstructions" xsi:type="boolean">true</item>
                <item name="isShowImageUploadOptions" xsi:type="boolean">true</item>
                <item name="maxFileSize" xsi:type="object">ImageMaxFileSizeDesktop</item>
                <item name="allowedExtensions" xsi:type="string">jpg jpeg gif png webp</item>
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/element/image-uploader</item>
                <item name="componentType" xsi:type="string">imageUploader</item>
                <item name="dataScope" xsi:type="string">background_image</item>
                <item name="formElement" xsi:type="string">imageUploader</item>
                <item name="uploaderConfig" xsi:type="array">
                    <item name="url" xsi:type="object">Magento\PageBuilder\Model\Config\ContentType\AdditionalData\Provider\Uploader\SaveUrl</item>
                </item>
                <item name="previewTmpl" xsi:type="string">Magento_PageBuilder/form/element/uploader/preview</item>
                <item name="template" xsi:type="string">Magento_PageBuilder/form/element/uploader/preview/image</item>
                <item name="mediaGallery" xsi:type="array">
                    <item name="openDialogUrl" xsi:type="object">Magento\PageBuilder\Model\Config\ContentType\AdditionalData\Provider\Uploader\OpenDialogUrl</item>
                    <item name="openDialogTitle" xsi:type="string" translate="true">Insert Images...</item>
                    <item name="initialOpenSubpath" xsi:type="string">categories-carousel</item>
                    <item name="storeId" xsi:type="object">Magento\PageBuilder\Model\Config\ContentType\AdditionalData\Provider\StoreId</item>
                </item>
                <item name="validation" xsi:type="array">
                    <item name="required-entry" xsi:type="boolean">true</item>
                </item>
            </item>
        </additional_data>
    </type>
</config>

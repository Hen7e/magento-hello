<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type
        name="plp_enhanced_hero"
        label="PLP hero"
        menu_section="enhance-plp-items"
        component="Magento_PageBuilder/js/content-type"
        preview_component="Magento_PageBuilder/js/content-type/preview"
        master_component="Magento_PageBuilder/js/content-type/master"
        form="pagebuilder_plp_enhanced_hero_form"
        icon="icon-pagebuilder-banner"
        translate="label"
    >
        <parents default_policy="deny">
            <parent name="root-container" policy="allow"/>
        </parents>
        <children default_policy="allow"/>

        <appearances>
            <appearance
                name="default"
                default="true"
                preview_template="Astound_ContentTypes/content-type/plp_enhanced_hero/default/preview"
                master_template="Astound_ContentTypes/content-type/plp_enhanced_hero/default/master"
                reader="Magento_PageBuilder/js/master-format/read/configurable">

                <elements>
                    <element name="main">
                        <attribute name="name" source="data-content-type"/>
                        <attribute name="appearance" source="data-appearance"/>
                    </element>
                    <element name="description_background">
                        <style name="background_color_image" source="background_color"/>
                    </element>
                    <element name="description_alignment">
                        <style name="justify_content" source="justify_content"/>
                    </element>
                    <element name="description">
                        <html name="description_content" preview_converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                    <element name="description_image_left">
                        <attribute name="description_image_left" source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                        <attribute name="alt_left_image" source="alt"/>
                    </element>
                    <element name="description_mobile_image_left">
                        <attribute name="description_mobile_image_left" source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                        <attribute name="alt_left_image" source="alt"/>
                    </element>
                    <element name="description_image_center">
                        <attribute name="description_image_center" source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                        <attribute name="alt_center_image" source="alt"/>
                    </element>
                    <element name="description_mobile_image_center">
                        <attribute name="description_mobile_image_center" source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                        <attribute name="alt_center_image" source="alt"/>
                    </element>
                    <element name="description_image_right">
                        <attribute name="description_image_right" source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                        <attribute name="alt_right_image" source="alt"/>
                    </element>
                    <element name="description_mobile_image_right">
                        <attribute name="description_mobile_image_right" source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                        <attribute name="alt_right_image" source="alt"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
        <additional_data>
            <item name="uploaderConfig" xsi:type="array">
                <item name="isShowImageUploadInstructions" xsi:type="boolean">true</item>
                <item name="isShowImageUploadOptions" xsi:type="boolean">true</item>
                <item name="maxFileSize" xsi:type="object">ImageMaxFileSizeDesktop</item>
                <item name="allowedExtensions" xsi:type="string">jpg jpeg gif png webp</item>
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/element/image-uploader</item>
                <item name="componentType" xsi:type="string">imageUploader</item>
                <item name="dataScope" xsi:type="string">background_image</item>
                <item name="formElement" xsi:type="string">imageUploader</item>
                <item name="uploaderConfig" xsi:type="array">
                    <item name="url" xsi:type="object">
                        Magento\PageBuilder\Model\Config\ContentType\AdditionalData\Provider\Uploader\SaveUrl
                    </item>
                </item>
                <item name="previewTmpl" xsi:type="string">Magento_PageBuilder/form/element/uploader/preview</item>
                <item name="template" xsi:type="string">Magento_PageBuilder/form/element/uploader/preview/image</item>
                <item name="mediaGallery" xsi:type="array">
                    <item name="openDialogUrl" xsi:type="object">
                        Magento\PageBuilder\Model\Config\ContentType\AdditionalData\Provider\Uploader\OpenDialogUrl
                    </item>
                    <item name="openDialogTitle" xsi:type="string" translate="true">Insert Images...</item>
                    <item name="initialOpenSubpath" xsi:type="string">categories-carousel</item>
                    <item name="storeId" xsi:type="object">
                        Magento\PageBuilder\Model\Config\ContentType\AdditionalData\Provider\StoreId
                    </item>
                </item>
                <item name="validation" xsi:type="array">
                    <item name="required-entry" xsi:type="boolean">true</item>
                </item>
            </item>
            <item name="wysiwygConfig" xsi:type="array">
                <item name="wysiwygConfigData" xsi:type="object">Magento\PageBuilder\Model\Config\ContentType\AdditionalData\Provider\Wysiwyg\Config</item>
            </item>
        </additional_data>
    </type>
</config>

<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="press_item"
          label="Press Item"
          component="Magento_PageBuilder/js/content-type"
          preview_component="Magento_PageBuilder/js/content-type/preview"
          master_component="Magento_PageBuilder/js/content-type/master"
          form="pagebuilder_press_item_form"
          menu_section="hydro"
          icon="icon-pagebuilder-block"
          sortOrder="22"
          translate="label">
        <parents default_policy="deny">
            <parent name="press" policy="allow"/>
        </parents>
        <children default_policy="deny"/>
        <appearances>

            <!-- "image" appearance -->
            <appearance name="image"
                        default="true"
                        preview_template="Astound_ContentTypes/content-type/press_item/image/preview"
                        master_template="Astound_ContentTypes/content-type/press_item/image/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <elements>

                    <!-- > Main -->
                    <element name="main">
                        <style name="text_color" source="color" persistence_mode="write"/>
                        <style name="overlay_color" source="background_color" persistence_mode="write"/>
                        <attribute name="name" source="data-content-type"/>
                        <attribute name="appearance" source="data-appearance"/>
                        <attribute name="overlay_color_attribute" storage_key="overlay_color" source="data-overlay-color"/>
                        <attribute name="text_color_attribute" storage_key="text_color" source="data-text-color"/>
                    </element>
                    <!-- >/ Main -->

                    <!-- > Text Content -->
                    <element name="title">
                        <html name="title_html" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="source">
                        <html name="source_html" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="date">
                        <html name="date_html" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="action">
                        <html name="action_html" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <!-- >/ Text Content -->

                    <!-- > Link -->
                    <element name="link">
                        <attribute name="name" source="data-element"/>
                        <attribute name="link_url" reader="Magento_PageBuilder/js/property/link" persistence_mode="read"/>
                        <attribute name="virtual_link_href" storage_key="link_url" source="href" converter="Magento_PageBuilder/js/converter/attribute/link-href" persistence_mode="write"/>
                        <attribute name="virtual_link_target" storage_key="link_url" source="target" converter="Magento_PageBuilder/js/converter/attribute/link-target" persistence_mode="write"/>
                        <attribute name="virtual_link_type" storage_key="link_url" source="data-link-type" converter="Magento_PageBuilder/js/converter/attribute/link-type" persistence_mode="write"/>
                    </element>
                    <!-- >/ Link -->

                    <!-- > Image (For "image" appearance only) -->
                    <element name="image">
                        <attribute name="image_source" source="src" converter="Magento_PageBuilder/js/converter/attribute/src" preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                        <attribute name="virtual_image_alt" storage_key="title_html" source="alt" converter="Magento_PageBuilder/js/converter/html/tag-escaper" persistence_mode="write"/>
                    </element>
                    <!-- >/ Image -->

                    <!-- ? Throws error without this elements in both appearances -->
                    <element name="description"/>
                    <!-- ? -->

                </elements>
            </appearance>
            <!-- /"image" appearance -->

            <!-- "card" appearance -->
            <appearance name="card"
                        default="false"
                        preview_template="Astound_ContentTypes/content-type/press_item/card/preview"
                        master_template="Astound_ContentTypes/content-type/press_item/card/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <elements>

                    <!-- > Main -->
                    <element name="main">
                        <attribute name="name" source="data-content-type"/>
                        <attribute name="appearance" source="data-appearance"/>
                    </element>
                    <!-- >/ Main -->

                    <!-- > Text Content -->
                    <element name="title">
                        <attribute name="name" source="data-element"/>
                        <html name="title_html" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="description">
                        <attribute name="name" source="data-element"/>
                        <html name="description_html" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="date">
                        <attribute name="name" source="data-element"/>
                        <html name="date_html" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="action">
                        <attribute name="name" source="data-element"/>
                        <html name="action_html" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <!-- >/ Text Content -->

                    <!-- > Link -->
                    <element name="link">
                        <attribute name="name" source="data-element"/>
                        <attribute name="link_url" reader="Magento_PageBuilder/js/property/link" persistence_mode="read"/>
                        <attribute name="virtual_link_href" storage_key="link_url" source="href" converter="Magento_PageBuilder/js/converter/attribute/link-href" persistence_mode="write"/>
                        <attribute name="virtual_link_target" storage_key="link_url" source="target" converter="Magento_PageBuilder/js/converter/attribute/link-target" persistence_mode="write"/>
                        <attribute name="virtual_link_type" storage_key="link_url" source="data-link-type" converter="Magento_PageBuilder/js/converter/attribute/link-type" persistence_mode="write"/>
                    </element>
                    <!-- >/ Link -->

                    <!-- ? Throws error without this elements in both appearances -->
                    <element name="image"/>
                    <element name="source"/>
                    <!-- ? -->

                </elements>
            </appearance>
            <!-- /"card" appearance -->
        </appearances>
        <is_system>false</is_system>
    </type>
</config>

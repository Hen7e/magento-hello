<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="plp_enhanced_hero_banner"
          label="Hero banner"
          menu_section="enhance-plp-items"
          component="Magento_PageBuilder/js/content-type"
          preview_component="Magento_PageBuilder/js/content-type/preview"
          master_component="Magento_PageBuilder/js/content-type/master"
          form="pagebuilder_plp_enhanced_hero_banner_form"
          icon="icon-pagebuilder-image"
          translate="label"
    >

        <parents default_policy="deny">
            <parent name="root-container" policy="allow"/>
        </parents>
        <children default_policy="deny"/>

        <appearances>
            <appearance name="default"
                        default="true"
                        preview_template="Astound_ContentTypes/content-type/plp_enhanced_hero_banner/default/preview"
                        master_template="Astound_ContentTypes/content-type/plp_enhanced_hero_banner/default/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable"
            >
                <elements>
                    <element name="main">
                        <style name="background_color" source="background_color"/>
                        <attribute name="name" source="data-content-type"/>
                        <attribute name="appearance" source="data-appearance"/>
                    </element>
                    <element name="hero_banner_alignment">
                        <style name="margins" storage_key="margins_and_padding"
                               reader="Magento_PageBuilder/js/property/margins"
                               converter="Magento_PageBuilder/js/converter/style/margins"/>
                        <style name="padding" storage_key="margins_and_padding"
                               reader="Magento_PageBuilder/js/property/paddings"
                               converter="Magento_PageBuilder/js/converter/style/paddings"/>
                        <style name="justify_content" source="justify_content"/>
                        <style name="align_items" source="align_items"/>
                    </element>
                    <element name="plp_description">
                        <html name="description_content" preview_converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                    <element name="plp_banner_subtext">
                        <style name="subtext_color" source="color"/>
                        <html name="plp_hero_banner_subtext"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="plp_hero_banner_title">
                        <style name="title_color" source="color"/>
                        <html name="plp_hero_banner_title"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="plp_hero_banner_title_additional">
                        <style name="title_additional_color" source="color"/>
                        <html name="plp_hero_banner_title_additional"
                              converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="plp_hero_banner_image">
                        <attribute name="plp_hero_banner_image" source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                        <attribute name="image_height_desktop" source="height"/>
                        <attribute name="image_width_desktop" source="width"/>
                        <attribute name="alt_hero_banner_image" source="alt"/>
                        <attribute name="title_hero_banner_image_attribute" source="title"/>
                    </element>
                    <element name="plp_hero_banner_image_mobile">
                        <attribute name="plp_hero_banner_image_mobile" source="src"
                                   converter="Magento_PageBuilder/js/converter/attribute/src"
                                   preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                        <attribute name="image_height_mobile" source="height"/>
                        <attribute name="image_width_mobile" source="width"/>
                        <attribute name="alt_hero_banner_image" source="alt"/>
                        <attribute name="title_hero_banner_image_attribute" source="title"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
        <additional_data>
            <item name="wysiwygConfig" xsi:type="array">
                <item name="wysiwygConfigData" xsi:type="object">Magento\PageBuilder\Model\Config\ContentType\AdditionalData\Provider\Wysiwyg\Config</item>
            </item>
        </additional_data>
    </type>
</config>

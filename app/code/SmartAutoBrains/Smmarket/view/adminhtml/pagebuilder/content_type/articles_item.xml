<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="articles_item"
          label="Articles Item"
          component="Magento_PageBuilder/js/content-type"
          preview_component="Magento_PageBuilder/js/content-type/preview"
          master_component="Magento_PageBuilder/js/content-type/master"
          form="pagebuilder_articles_item_form"
          menu_section="hydro"
          icon="icon-pagebuilder-block"
          sortOrder="22"
          translate="label">
        <parents default_policy="deny">
            <parent name="articles" policy="allow"/>
        </parents>
        <children default_policy="deny"/>
        <appearances>

            <appearance name="default"
                        default="true"
                        preview_template="Astound_ContentTypes/content-type/articles_item/default/preview"
                        master_template="Astound_ContentTypes/content-type/articles_item/default/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <elements>

                    <!-- > Main -->
                    <element name="main">
                        <attribute name="name" source="data-content-type"/>
                        <attribute name="appearance" source="data-appearance"/>
                        <style name="back_color" source="background_color" persistence_mode="write"/>
                        <attribute name="back_color_attribute" storage_key="back_color" source="data-back-color"/>
                    </element>
                    <!-- >/ Main -->

                    <!-- > Text Content -->
                    <element name="title">
                        <attribute name="name" source="data-element"/>
                        <html name="title_html" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="year">
                        <attribute name="name" source="data-element"/>
                        <html name="year_html" converter="Magento_PageBuilder/js/converter/html/tag-escaper"/>
                    </element>
                    <element name="description">
                        <attribute name="name" source="data-element"/>
                        <html name="description_html" preview_converter="Magento_PageBuilder/js/converter/html/directive"/>
                    </element>
                    <!-- >/ Text Content -->

                    <!-- > Image (For "image" appearance only) -->
                    <element name="image">
                        <attribute name="name" source="data-element"/>
                        <attribute name="alt" source="alt"/>
                        <attribute name="title_attribute" source="title"/>
                        <attribute name="image_source" source="src" converter="Magento_PageBuilder/js/converter/attribute/src" preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                    </element>
                    <!-- >/ Image -->

                </elements>
            </appearance>
        </appearances>
        <is_system>false</is_system>
        <additional_data>
            <item name="wysiwygConfig" xsi:type="array">
                <item name="wysiwygConfigData" xsi:type="object">Magento\PageBuilder\Model\Config\ContentType\AdditionalData\Provider\Wysiwyg\Config</item>
            </item>
        </additional_data>
    </type>
</config>

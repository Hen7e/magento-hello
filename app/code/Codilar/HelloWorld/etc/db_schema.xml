<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="testTask_blog" resource="default" engine="innodb" comment="blog posts table">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true"
                comment="Post ID"/>
        <column xsi:type="text" name="name" nullable="false"
                comment="Post title"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                comment="Entity ID"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="text" name="content" nullable="false"
                comment="Post content"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="TESTTASK_BLOG_ENTITY_ID_CUSTOMER_ENTITY_ENTITY_ID"
                    table="testTask_blog" column="entity_id" referenceTable="customer_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>

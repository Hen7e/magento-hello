<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_attributes">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_tile_item_form.pagebuilder_tile_item_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Story Tile</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_tile_item_form.pagebuilder_tile_item_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_tile_item_form</namespace>
    </settings>
    <dataSource name="pagebuilder_tile_item_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_tile_item_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="base" sortOrder="5">
        <settings>
            <label translate="true">CMS Block</label>
        </settings>
        <component component="Magento_PageBuilder/js/form/element/block-chooser" name="block_chooser" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="requestParameter" xsi:type="string">block_id</item>
                    <item name="dataUrlConfigPath" xsi:type="string">content_types.tile_item.additional_data.chooserConfig.dataUrl</item>
                    <item name="modalName" xsi:type="string">ns = ${ $.ns }, index = modal</item>
                    <item name="buttonTitle" xsi:type="string" translate="true">Select Block</item>
                    <item name="displayMetadata" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="id">${ $.ns }.${ $.ns }.base.block_id:value</link>
                </imports>
            </settings>
        </component>
        <field name="block_id" formElement="hidden" sortOrder="20">
            <settings>
                <dataScope>block_id</dataScope>
                <dataType>text</dataType>
                <imports>
                    <link name="value">${ $.ns }.${ $.ns }.modal.pagebuilder_block_select_grid.columns.ids:lastSelected</link>
                </imports>
            </settings>
        </field>
        <field name="template" formElement="select" sortOrder="30" component="Magento_PageBuilder/js/form/element/dependent-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Template</label>
                <dataScope>template</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">widget/static_block/default.phtml</item>
                                <item name="label" xsi:type="string" translate="true">CMS Static Block Default Template</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceStoryTiles"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="size" sortOrder="10">
        <settings>
            <label translate="true">
                Tile Size
            </label>
        </settings>
        <field name="tile_size" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">tile-item-small</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="TileSizeSource"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="general" sortOrder="20">
        <settings>
            <label translate="true">
                General
            </label>
        </settings>
        <field name="tile_title" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>tile_title</dataScope>
                <dataType>text</dataType>
                <label translate="false">Title</label>
            </settings>
        </field>
        <field name="tile_title_html" sortOrder="20" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>tile_title_html</dataScope>
                <dataType>text</dataType>
                <label translate="false">Title HTML</label>
            </settings>
        </field>
        <field name="tile_details" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>tile_details</dataScope>
                <dataType>text</dataType>
                <label translate="false">Details text</label>
            </settings>
        </field>
        <field name="tile_description" sortOrder="40" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>tile_description</dataScope>
                <dataType>text</dataType>
                <label translate="false">Description text</label>
            </settings>
        </field>
        <field name="tile_link_text" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>tile_link_text</dataScope>
                <dataType>text</dataType>
                <label translate="false">Link text</label>
            </settings>
        </field>
        <urlInput name="tile_link_url" sortOrder="60">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Link</label>
                <dataScope>tile_link_url</dataScope>
                <urlTypes class="Magento\Ui\Model\UrlInput\LinksConfigProvider"/>
            </settings>
        </urlInput>
        <field name="tile_additional_link_text" sortOrder="65" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataScope>tile_additional_link_text</dataScope>
                <dataType>text</dataType>
                <label translate="false">Additional link text</label>
            </settings>
        </field>
        <urlInput name="tile_additional_link_url" sortOrder="66">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Additional link</label>
                <dataScope>tile_additional_link_url</dataScope>
                <urlTypes class="Magento\Ui\Model\UrlInput\LinksConfigProvider"/>
            </settings>
        </urlInput>
        <field name="tile_image_height" sortOrder="68" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">130</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Tile image height</label>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                </validation>
                <dataType>text</dataType>
                <dataScope>tile_image_height</dataScope>
            </settings>
        </field>
        <field name="tile_image_width" sortOrder="69" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">100</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Tile image width</label>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                </validation>
                <dataType>text</dataType>
                <dataScope>tile_image_width</dataScope>
            </settings>
        </field>
        <field name="tile_image" sortOrder="70" formElement="imageUploader">
            <settings>
                <label translate="true">Image</label>
                <notice>Small image above tile header</notice>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="additional_attribute" sortOrder="80" formElement="input">
            <settings>
                <label translate="true">Additional CSS Class</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="text_color" sortOrder="90" formElement="colorPicker">
            <settings>
                <label translate="true">Text Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>text_color</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <field name="text_color_second" sortOrder="95" formElement="colorPicker">
            <settings>
                <label translate="true">Second Text Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>text_color_second</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <field name="link_color" sortOrder="100" formElement="colorPicker">
            <settings>
                <label translate="true">Link Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>link_color</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
        <field name="additional_link_color" sortOrder="105" formElement="colorPicker">
            <settings>
                <label translate="true">Additional Link color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>additional_link_color</dataScope>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="background" sortOrder="25">
        <field name="background_image" formElement="imageUploader">
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="mobile_image" formElement="imageUploader">
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png svg</allowedExtensions>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="background_attachment" sortOrder="60" formElement="hidden"/>
        <field name="background_repeat" sortOrder="60" formElement="hidden"/>
    </fieldset>
    <fieldset name="seo" sortOrder="30">
        <settings>
            <label translate="true">Search Engine Optimization</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="alt" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Alternative Text for image</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="title_attribute" sortOrder="20" formElement="input">
            <settings>
                <label translate="true">Link Title Attribute</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="advanced" sortOrder="90">
        <settings>
            <visible>false</visible>
        </settings>
    </fieldset>
    <modal name="modal" sortOrder="30">
        <settings>
            <listens>
                <link name="pagebuilder_block_select_grid.pagebuilder_block_select_grid.columns.ids:lastSelected">closeModal</link>
            </listens>
            <modalClass>pagebuilder-block-modal</modalClass>
            <options>
                <option name="title" xsi:type="string" translate="true">Select Block</option>
            </options>
        </settings>
        <insertListing name="pagebuilder_block_select_grid" sortOrder="10">
            <settings>
                <externalData>block_id</externalData>
                <externalProvider>${ $.ns }.pagebuilder_block_select_grid_data_source</externalProvider>
                <loading>false</loading>
                <selectionsProvider>${ $.ns }.${ $.ns }.columns.ids</selectionsProvider>
                <autoRender>true</autoRender>
                <dataScope>block_id</dataScope>
                <ns>pagebuilder_block_select_grid</ns>
                <dataLinks>
                    <imports>false</imports>
                    <exports>true</exports>
                </dataLinks>
                <listens>
                    <link name="pagebuilder_block_select_grid.pagebuilder_block_select_grid.columns.ids:lastSelected">save</link>
                </listens>
            </settings>
        </insertListing>
    </modal>
</form>
